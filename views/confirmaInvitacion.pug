- var fechaHoy = new Date().getFullYear();

doctype html
html(lang=es)
    head
        link(href='//fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet')
        link(href='//fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(href='/css/materialize.min.css' rel='stylesheet')
        link(href='/css/snapcar-custom.min.css' rel='stylesheet')
    body
        main
            .navbar-fixed
                nav.z-depth-0(role='navigation')
                    .nav-wrapper.container
                        a.brand-logo(href='#') SnapCar Seguros
                            // - img(src='/img/snapcar-logo-arti.svg' width='180' title='SnapCar Seguros')
            .container
                .row
                    .col.s12
                        h4 Usted ha confirmado la invitación
                        p El ID de invitación es 
                            b #{idInvitacion}

        footer.page-footer
            .footer-copyright
                .container SnapCar &reg; #{fechaHoy} | Todos los derechos reservados

        script(src='/js/jquery-3.1.1.min.js')
        script(src='/js/materialize.min.js')