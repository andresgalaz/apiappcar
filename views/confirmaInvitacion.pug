- var fechaHoy = new Date().getFullYear();
- var estado = estadoInvitacion;

doctype html
html(lang=es)
    head
        link(href='//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i' rel='stylesheet')
        link(href='//fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')
        link(href='/css/bootstrap.min.css' rel='stylesheet')
        link(href='/css/snapcar-custom.min.css' rel='stylesheet')
    body
        nav.navbar.navbar-snapcar
            .container
                .navbar-header
                    a.navbar-brand(href='#')
                        img(src='/img/snapcar-logo-arti.svg' width='180' title='SnapCar Seguros')

        .container
            .row
                .col-md-12
                    h2
                        if estado === 'exito'
                            i.fa.fa-check-circle 
                            | Usted ha confirmado la invitación.
                        else if estado === 'aceptado'
                            i.fa.fa-exclamation-circle 
                            | La invitación ya ha sido aceptada, ingrese a su cuenta.
                        else
                            i.fa.fa-exclamation-circle 
                            | La invitación no es válida.
                    p El ID de invitación es 
                        b #{idInvitacion}
                        | .

        footer.footer
            .container
                p.text-muted SnapCar &reg; #{fechaHoy} | Todos los derechos reservados


// -
        header
            .navbar-fixed
                nav.z-depth-0(role='navigation')
                    .nav-wrapper.container
                        a.brand-logo(href='#')
                            img(src='/img/snapcar-logo-arti.svg' width='180' title='SnapCar Seguros')
        main
            .container
                .row
                    .col.s12
                        .section
                            h4
                                if estado === 'exito'
                                    // - i.small.material-icons done
                                    | Usted ha confirmado la invitación.
                                else if estado === 'aceptado'
                                    // - i.small.material-icons error_outline
                                    | La invitación ya ha sido aceptada, ingrese a su cuenta.
                                else
                                    // - i.small.material-icons error_outline
                                    | La invitación no es válida.
                            p El ID de invitación es 
                                b #{idInvitacion}
                                | .

        footer.page-footer
            .footer-copyright
                .container SnapCar &reg; #{fechaHoy} | Todos los derechos reservados

        script(src='/js/jquery-3.1.1.min.js')
        script(src='/js/bootstrap.min.js')