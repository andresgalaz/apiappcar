- var fechaHoy = new Date().getFullYear();
// - var estado = estadoInvitacion;

doctype html
html(lang=es)
    head
        link(href='//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i' rel='stylesheet')
        link(href='//fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(href='/css/materialize.min.css' rel='stylesheet')
        link(href='/css/snapcar-custom.min.css' rel='stylesheet')
    body
        header
            .navbar-fixed
                nav.z-depth-0(role='navigation')
                    .nav-wrapper.container
                        a.brand-logo(href='#')
                            img(src='/img/snapcar-logo-arti.svg' width='180' title='SnapCar Seguros')
        main
            .container
                .row
                    .col.s12
                        .section
                            h4
                             //   if estado === 'exito'
                                    i.material-icons done
                                    | Usted ha confirmado la invitación.
                             //   else if estado === 'aceptado'
                                    i.material-icons error_outline
                                    | La invitación ya ha sido aceptada, ingrese a su cuenta.
                             //   else
                                    i.material-icons error_outline
                                    | La invitación no es válida. Vuelva a solicitar una.
                            p El ID de invitación es 
                                b #{idInvitacion}.

        footer.page-footer
            .footer-copyright
                .container SnapCar &reg; #{fechaHoy} | Todos los derechos reservados

        script(src='/js/jquery-3.1.1.min.js')
        script(src='/js/materialize.min.js')