- var fechaHoy = new Date().getFullYear();

doctype html
html(lang=es)
    head
    body(width='100%' bgcolor='#efefef' style={'font-family': 'Helvetica, Arial, Verdana, Trebuchet MS', 'color': '#000000', 'margin': '0'})
        center(style={'width': '100%', 'background': '#efefef'})
            div(style={'max-width': '600px', 'margin': 'auto'})
                table#header(border='0' cellpadding='0' cellspacing='0' width='100%')
                    tr
                        td(align='left' valign='top' style={'display': 'block', 'margin-top': '20px', 'margin-bottom': '20px'})
                            img(
                                src=baseUrl + '/img/snapcar-email-header.png'
                                width='210'
                                height='58'
                                title='SnapCar Seguros'
                                )
                            style={display: 'block'}
                table#content(border='0' cellpadding='15' cellspacing='0' width='100%')
                    tr
                        td(align='center' valign='top' bgcolor='#ffffff')
                            h1 Invitación SnapCar
                            p Usted ha sido invitado como conductor adicional por #{nombreUsuario}.
                            p
                                b Email Usuario: 
                                | #{emailUsuario}
                            p
                                b Email Invitado: 
                                | #{emailInvitado}
                table#call-to-action(border='0' cellpadding='20' cellspacing='0' width='100%')
                        td(align='center' valign='top' bgcolor='#ffffff')
                            div(style={
                                'background-color': '#000000',
                                'min-height': '40px',
                                'height': 'auto',
                                'max-width': '80%',
                                'width': 'auto',
                                'line-height': '40px',
                                'text-align': 'center',
                                'margin': '0 20px'
                                })
                                b
                                    a(
                                        href=baseUrl + '/confirma?id=' + idInvitacion
                                        style={
                                            'color': '#ffffff',
                                            'font-size': '1.5em',
                                            'font-weight': 'normal',
                                            'text-decoration': 'none',
                                            'padding': '20px',
                                            }
                                    ) Aceptar Invitación
                table#footer(border='0' cellpadding='5' cellspacing='0' width='100%')
                    tr
                        td(align='center' valign='top' width='80%' style={'background-color': '#006bff', 'line-height': '20px'})
                            p(style={color: '#ffffff', 'text-align': 'left', 'padding-left': '20px'}) SnapCar &reg; #{fechaHoy}
                        td(align='center' valign='top' width='10%' style={'background-color': '#006bff', 'height': '20px'})
                            a(href='#')
                                img(
                                    src=baseUrl + '/img/snapcar-email-facebook.png'
                                    width='40'
                                    height='40'
                                    title='Seguinos en Facebook'
                                    )
                        td(align='center' valign='top' width='10%' style={'background-color': '#006bff', 'height': '20px'})
                            a(href='#')
                                img(
                                    src=baseUrl + '/img/snapcar-email-twitter.png'
                                    width='40'
                                    height='40'
                                    title='Seguinos en Twitter'
                                    )