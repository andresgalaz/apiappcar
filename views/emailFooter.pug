table#footer-separador(border='0' cellpadding='0' cellspacing='0' width='100%')
    tr
        td(align='center' colspan='3' width='100%' style={'background-color': '#efefef', 'height': '20px'})
table#sub-footer(border='0' cellpadding='0' cellspacing='0' width='100%')
    tr
        td(align='center' width='60%' style={'background-color': '#efefef'})
            p(style={'font-size': '14px'}) Descargá nuestra aplicación
        td(align='center' width='20%' style={'background-color': '#efefef'})
            a(href='https://play.google.com/store/apps/details?id=com.snapcar')
                img(
                    src='https://cdn.snapcar.com.ar/img/email/general/icon-google-play-120x37.png'
                    width='120'
                    height='37'
                    alt='Disponible en Google Play'
                    style={'display': 'block'}
                )
        td(align='center' width='20%' style={'background-color': '#efefef'})
            a(href='https://itunes.apple.com/ar/app/snapcar-integrity/id1220566270?mt=8')
                img(
                    src='https://cdn.snapcar.com.ar/img/email/general/icon-app-store-120x37.png'
                    width='120'
                    height='37'
                    alt='Consíguelo en el App Store'
                    style={'display': 'block'}
                )
    tr
        td(align='center' colspan='3' width='100%' style={'background-color': '#efefef'})
            div(style={'border-bottom': '1px solid #c1c1c1', 'padding': '10px 0'})
table#footer(border='0' cellpadding='10' cellspacing='0' width='100%')
    td(align='right' valign='middle' width='10%' style={'background-color': '#efefef'})
        a(href='https://www.facebook.com/SnapcarArg/')
            img(
                src='https://cdn.snapcar.com.ar/img/email/general/icon-facebook.png'
                width='35'
                height='35'
                alt='Seguinos en Facebook'
                style={'display': 'block', 'padding-top': '20px'}
            )
    td(align='left' valign='middle' width='10%' style={'background-color': '#efefef'})
        a(href='https://twitter.com/SnapCarArg')
            img(
                src='https://cdn.snapcar.com.ar/img/email/general/icon-twitter.png'
                width='35'
                height='35'
                alt='Seguinos en Twitter'
                style={'display': 'block', 'padding-top': '20px'}
            )
